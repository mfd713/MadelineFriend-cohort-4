@model IEnumerable<GravelFamily.DAL.Unit>

@{ 
    ViewData["Title"] = "Index";
} 

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                UnitId
            </th>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.UnitId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <a asp-controller="Units" asp-action="Details" asp-route-id="@item.UnitId">Details</a> |
                    <a asp-controller="Units" asp-action="Edit" asp-route-id="@item.UnitId">Edit</a> |
                    <a asp-controller="Units" asp-action="Delete" asp-route-id="@item.UnitId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

