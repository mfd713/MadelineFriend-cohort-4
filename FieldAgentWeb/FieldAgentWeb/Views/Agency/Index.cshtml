        <td><a asp-controller="Agenct" asp-action="GetRooms" asp-route-id="@building.BuildingID">@building.BuildingName</a></td>
        <td><a asp-action="Edit" asp-controller="Building" asp-route-id="@building.BuildingID">Edit</a></td>
        <td><a asp-action="Remove" asp-controller="Building" asp-route-id="@building.BuildingID">Delete</a></td>*@
            </tr>
            }
        </tbody>
    </table>
</div>
