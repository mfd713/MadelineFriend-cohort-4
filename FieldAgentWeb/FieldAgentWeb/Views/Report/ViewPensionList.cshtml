@model List<FieldAgent.DTOs.PensionListItem>
@{
    ViewBag.Title = "Pension List";
}

@if (Model.Count == 0)
{
    <p class="text-danger">No retirees found for selected agency</p>
}
<h1>Pension List</h1>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Badge ID</th>
                <th>DOB</th>
                <th>Deactivation Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agent in Model)
            {
                <tr>
                    <td>@agent.NameLastFirst.Replace(",", ", ")</td>
                    <td>@agent.BadgeId</td>
                    <td>
                        @agent.DateOfBirth.ToShortDateString()
                    </td>
                    <td>@agent.DeactivationDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index">Back to Reports</a>
</div>
